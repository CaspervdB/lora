{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Measurement schema",
  "type": "object",
  "required": [
    "nodeID",
    "temperature",
    "humidity",
    "datetime"
  ],
  "properties": {
    "nodeID": {
      "type": "integer",
      "minimum": 0
    },
    "temperature": {
      "type": "number",
      "minimum": 0
    },
    "humidity": {
      "type": "number",
      "minimum": 0
    },
    "datetime": {
      "type": "string",
      "pattern": "^.*$"
    }
  }
}
